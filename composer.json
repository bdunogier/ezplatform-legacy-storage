{
    "name": "ezsystems/ezplatform-legacy-storage-engine",
    "description": "eZ Platform Legacy Storage Engine Extension. Stores eZ Platform Repository data using the storage engine from the legacy eZ Publish.",
    "homepage": "https://ezplatform.com",
    "license": "GPL-2.0-only",
    "type": "ezplatform-bundle",
    "require": {
        "php": "^7.1",
        "ext-xsl": "*",
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "matthiasnoback/symfony-dependency-injection-test": "~3.0",
        "friendsofphp/php-cs-fixer": "~2.7.1"
    },
    "autoload": {
        "psr-4": {
            "EzSystems\\EzPlatformLegacyStorageEngineBundle\\": "src/bundle",
            "EzSystems\\EzPlatformLegacyStorageEngine\\": "src/lib"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EzSystems\\Tests\\EzPlatformLegacyStorageEngine\\": "tests/lib",
            "EzSystems\\Tests\\EzPlatformLegacyStorageEngineBundle\\": "tests/bundle",
            "EzSystems\\IntegrationTests\\EzPlatformEzPlatformLegacyStorageEngine\\": "tests/integration"
        }
    },
    "scripts": {
        "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
